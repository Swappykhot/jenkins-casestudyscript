name: CI/CD Pipeline

on:
  push:
    branches:
      - master
      - develop

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Login to DockerHub
      uses: docker/login-action@v1
      with:
        username: ${{ secrets.swappykhot }}
        password: ${{ secrets.Sw@ppy@99 }}

    - name: Build Docker image
      run: |
        docker build -t your-dockerhub-username/website:${{ github.sha }} .

    - name: Push Docker image
      if: github.ref == 'refs/heads/master'
      run: |
        docker tag your-dockerhub-username/website:${{ github.sha }} your-dockerhub-username/website:latest
        docker push your-dockerhub-username/website:latest

  deploy:
    runs-on: ubuntu-latest
    needs: build
    if: github.ref == 'refs/heads/master'

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Login to DockerHub
      uses: docker/login-action@v1
      with:
        username: ${{ secrets.swappykhot }}
        password: ${{ secrets.Sw@ppy@99 }}

    - name: Deploy to server
      run: |
        ssh -o StrictHostKeyChecking=no ${{ secrets.ubuntu }}@${{ secrets.34.204.61.138 }} << 'EOF'
        docker pull your-dockerhub-username/website:latest
        docker stop website || true
        docker rm website || true
        docker run -d --name website -p 82:80 your-dockerhub-username/website:latest
        EOF
